  <script>
    // Faz a mensagem rodar na aba do navegador
    const msg = " ðŸ”¥ chupa matheus ðŸ”¥ ";
    let i = 0;
    function rodarTitulo() {
      document.title = msg.substring(i) + msg.substring(0, i);
      i = (i + 1) % msg.length;
      setTimeout(rodarTitulo, 200);
    }
    window.onload = rodarTitulo;
  </script>
